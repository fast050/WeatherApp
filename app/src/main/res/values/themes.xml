<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="WeatherApp.Text.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="WeatherApp.Text.SubTitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="WeatherApp.Text.SubTitle.Big" parent="WeatherApp.Text.Title">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>


    <style name="WeatherApp.FavoriteCheck" parent="Theme.WeatherApp">

        <item name="android:scaleX">2</item>
        <item name="android:scaleY">2</item>
        <item name="android:button">@drawable/selector_favorite</item>

    </style>

    <style name="WeatherApp.Divider" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>

</resources>